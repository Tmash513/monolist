<% content_for :head do %>
  <title><%= @item.title %>-monolist</title>
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持っている人を表示しています。">
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image.present? %>
            <%= image_tag(@item.large_image, alt: @item.title) %>
          <% else %>
            <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% if @item.title.present? %>
          <%= @item.title %>
        <% else %>
          <%= put "仮タイトル" %>
        <% end %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <% @haved.each do |h| %>
            <%= link_to gravatar_for(w, size: 30).html_safe, w %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <% @wanted.each do |w| %>
            <%= link_to gravatar_for(w, size: 30).html_safe, w %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url ) %>
      </div>
    </div>
  </div>
</div>
